<div class="sidebar-area">
  <div class="sidebar">
    <video autoplay loop muted playsinline class="sidebar-video">
      <source src="/videos/water-shimmer.mp4" type="video/mp4"/>
    </video>
    <div class="sidebar-list">
      <%if(locals.sideBar) { %>
        <% if(locals.sideBar.title === "Home") { %>
          <div class="sidebar-header"><%=locals.sideBar.title.toUpperCase()%></div>
        <% } else { %>
          <a class="sidebar-header" href="/<%=locals.sideBar.title.toLowerCase().replace(/ /g, '-')%>"><%=locals.sideBar.title.toUpperCase()%></a>
        <% } %>
        <% locals.sideBar.data.forEach(e => { %>
          <% if(locals.sideBar.title === "Home") { if(e !== "Home") {%>
              <a class="sidebar-item" href="/<%=e.toLowerCase().replace(/ /g, '-')%>"><%=e%></a>
          <%  }} else { %>
              <a class="sidebar-item" href="/<%=locals.sideBar.title.toLowerCase().replace(/ /g, '-')%>/species?name=<%=e.toLowerCase().replace(/ /g, '-')%>"><%=e%></a>
          <%  }%>
       <% }) %>
      <% } %>
    </div>
  </div>
</div>